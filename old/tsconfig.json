{
    "compilerOptions": {
        "sourceMap": true,
        "module": "commonjs",
        "moduleResolution": "node",
        "target": "es5",
        "outDir": "./dist",
        "lib": [
            "dom",
            "es5",
            "es2015.collection",
            "es2015.promise"
        ],
        "types": [],
        "baseUrl": ".",
        "paths": {
            "@abaplint/runtime": [
                "node_modules/@abaplint/runtime/build/src/"
            ]
        },
        "typeRoots": [
            "node_modules/@types"
        ]
    },
    "include": [
        "./src/**/*"
    ],
    "exclude": [
        "node_modules"
    ]
}
